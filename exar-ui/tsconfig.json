{
  "version": "1.7.3",
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "src/",
    "sourceMap": true,
    "target": "es5",
    "module": "amd",
    "declaration": false,
    "noImplicitAny": false,
    "noResolve": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "filesGlob": [
    "src/**/*.ts",
    "test/**/*.ts",
    "typings/**/*.d.ts",
    "jspm_packages/npm/aurelia-*/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "jspm_packages/npm/react-tools@0.13.3/src/modern/class",
    "jspm_packages/npm/rx@4.1.0/ts",
    "Exar UI-darwin-x64"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
