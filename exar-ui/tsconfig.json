{
  "version": "2.0.0",
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "src/",
    "sourceMap": true,
    "target": "es5",
    "module": "amd",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "classic",
    "lib": ["es2015", "dom"]
  },
  "filesGlob": [
    "src/**/*.ts",
    "test/**/*.ts",
    "custom_typings/**/*.d.ts",
    "typings/index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "jspm_packages/npm/react-tools@0.13.3/src/modern/class",
    "jspm_packages/npm/rx@4.1.0/ts",
    "Exar UI-darwin-x64"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
